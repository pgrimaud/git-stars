{
    "name": "pgrimaud/git-stars",
    "authors": [
        {
            "name": "Pierre Grimaud",
            "email": "grimaud.pierre@gmail.com"
        },
        {
            "name": "Julien Cousin-Alliot",
            "email": "Nisouc@outlook.com"
        }
    ],
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "ext-amqp": "*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-imagick": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "beberlei/doctrineextensions": "^1.3",
        "composer/package-versions-deprecated": "1.11.99.2",
        "dg/twitter-php": "^4.1",
        "doctrine/annotations": "^1.13",
        "doctrine/doctrine-bundle": "^2.3",
        "doctrine/doctrine-migrations-bundle": "^3.1",
        "doctrine/orm": "^2.9",
        "google/cloud-bigquery": "^1.22",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/promises": "^1.4",
        "hwi/oauth-bundle": "^1.3",
        "knplabs/github-api": "^3.3",
        "league/iso3166": "^3.0",
        "nyholm/psr7": "^1.4",
        "php-http/httplug-bundle": "^1.20",
        "predis/predis": "^1.1",
        "rinvex/countries": "^7.3",
        "sentry/sentry-symfony": "^4.1",
        "stof/doctrine-extensions-bundle": "^1.6",
        "symfony/asset": "5.3.*",
        "symfony/cache": "5.3.*",
        "symfony/console": "5.3.*",
        "symfony/debug-bundle": "5.3.*",
        "symfony/dotenv": "5.3.*",
        "symfony/filesystem": "5.3.*",
        "symfony/flex": "^1.3.1",
        "symfony/form": "5.3.*",
        "symfony/framework-bundle": "5.3.*",
        "symfony/http-client": "5.3.*",
        "symfony/messenger": "5.3.*",
        "symfony/monolog-bundle": "^3.0",
        "symfony/proxy-manager-bridge": "5.3.*",
        "symfony/stopwatch": "5.3.*",
        "symfony/string": "5.3.*",
        "symfony/translation-contracts": "^2.4",
        "symfony/twig-bundle": "5.3.*",
        "symfony/var-dumper": "5.3.*",
        "symfony/web-profiler-bundle": "5.3.*",
        "symfony/webpack-encore-bundle": "^1.12",
        "symfony/yaml": "5.3.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "fakerphp/faker": "^1.14",
        "friendsofphp/php-cs-fixer": "^3.0",
        "jolicode/gif-exception-bundle": "^1.6",
        "phpstan/phpstan": "^0.12.88",
        "symfony/maker-bundle": "^1.31"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "./vendor/bin/cghooks add --ignore-lock"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "./vendor/bin/cghooks update"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.3.*"
        },
        "hooks": {
            "config" : {
                "stop-on-failure": ["pre-commit"]
            },
            "pre-commit": [
                "./vendor/bin/php-cs-fixer fix",
                "sleep 1 && git add $(git status --porcelain | grep .php | cut -c 3- | tr '\\n' ' ')",
                "./vendor/bin/phpstan analyse src --level=max"
            ]
        }
    }
}
